<h2 class="cf-heading"><%= gettext("Edit Forum „%{forum}“", forum: @forum.name) %></h2>

<%= form_for @changeset, admin_forum_path(@conn, :update, @forum), [class: "cf-form"], fn f -> %>
  <%= render "form.html", changeset: @changeset, f: f %>

  <p class="form-actions">
    <%= submit gettext("Save changes"), class: "cf-primary-btn" %>
    <%= link gettext("cancel"), to: admin_forum_path(@conn, :index), class: "cf-btn" %>
  </p>
<% end %>
