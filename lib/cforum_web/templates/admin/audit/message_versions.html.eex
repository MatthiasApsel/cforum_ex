<%= gettext("message version by “%{user}”, message", user: @entry.contents["author"]) %>

<%=
link(
  @entry.contents["message"]["subject"], to: Path.root_path(CforumWeb.Endpoint, :index) <>
    @entry.contents["message"]["thread"]["forum"]["slug"] <>
    @entry.contents["message"]["thread"]["slug"] <> "/" <>
    to_string(@entry.contents["message"]["message_id"]) <>
    "?view_all=yes#m" <> to_string(@entry.contents["message"]["message_id"])
)
%>


