<%= if @changeset.action do %>
  <div class="cf-error">
    <p><%= gettext("Oops, something went wrong! Please check the errors below.") %></p>
  </div>
<% end %>

<%= inputs_for @f, :settings, fn fs -> %>
  <%= sub_inputs fs, :options, fn(fo) -> %>
    <%= render "settings.html", f: fo, original_f: @f, user: @user %>
  <% end %>
<% end %>
