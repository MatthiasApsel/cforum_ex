<%= form_for Cforum.Accounts.User.changeset(@user), user_path(@conn, :delete, @user), [method: :delete], fn _f -> %>

<p>
  <strong><%= gettext("Caution!") %></strong> <%= gettext("You can't undo the deletion of this account, all data will be irretrievable lost! Are you sure that you wan't to delete the account?") %>
</p>

<p class="form-actions">
  <%= primary_submit gettext("Yes, delete user") %>
  <%= default_button_link gettext("Nope, get me out of here"), to: user_path(@conn, :show, @user) %>
</p>
<% end %>
