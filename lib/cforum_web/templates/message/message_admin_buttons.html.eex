  <div class="admin-links">
    <%= if blank?(@message.parent_id) do %>
      <%= if @thread.sticky do %>
        <%= destructive_index_button(to: Path.sticky_thread_path(@conn, :unsticky, @thread), params: std_args(@conn)) do %>
          <%= gettext("mark thread as sticky") %>
        <% end %>
      <% else %>
        <%= destructive_index_button(to: Path.sticky_thread_path(@conn, :sticky, @thread), params: std_args(@conn)) do %>
        <%= gettext("remove sticky mark") %>
      <% end %>
    <% end %>

    <%= destructive_index_button(to: Path.move_thread_path(@conn, @thread), method: :get) do %>
      <%= gettext("move thread") %>
    <% end %>

    <%= if @thread.flags["no-archive"] == "yes" do %>
      <%= destructive_index_button(to: Path.no_archive_thread_path(@conn, :do_archive, @thread), params: std_args(@conn)) do %>
        <%= gettext("don't archive thread") %>
      <% end %>
    <% else %>
      <%= destructive_index_button(to: Path.no_archive_thread_path(@conn, :no_archive, @thread), params: std_args(@conn)) do %>
        <%= gettext("archive thread") %>
      <% end %>
    <% end %>
  <% end %>

  <%= if @message.deleted do %>
    <%= destructive_index_button(to: Path.restore_message_path(@conn, @thread, @message), params: std_args(@conn)) do %>
      <%= gettext("restore this message") %>
    <% end %>
  <% else %>
    <%= destructive_index_button(to: Path.delete_message_path(@conn, @thread, @message), params: std_args(@conn)) do %>
      <%= gettext("delete this message") %>
    <% end %>
  <% end %>

  <%= if Abilities.may?(@conn, "messages/admin", :no_answer) do %>
    <%= if Messages.no_answer?(@message) do %>
      <%= destructive_index_button(to: Path.answer_message_path(@conn, @thread, @message), params: std_args(@conn)) do %>
        <%= gettext("allow answering to this message") %>
      <% end %>
    <% else %>
      <%= destructive_index_button(to: Path.no_answer_message_path(@conn, @thread, @message), params: std_args(@conn)) do %>
        <%= gettext("forbid answering to this message") %>
      <% end %>
    <% end %>
  <% end %>

  <%= if Abilities.may?(@conn, "threads/admin", :split, @message) do %>
    <%= destructive_index_button_link(gettext("split thread"), to: Path.split_thread_path(@conn, @thread, [mid: @message.message_id]), rel: "nofollow") %>
  <% end %>
</div>
