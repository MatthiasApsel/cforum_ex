    <%= if show_tags?(@opts[:parent], @message, @opts) do %>
      <ul class="cf-tags-list-thread">
        <%= for t <- @message.tags do %>
          <li class="cf-tag">
          <%= if @opts[:tree] do %>
            <%= t.tag_name %>
          <% else %>
            <%= link(t.tag_name, to: Path.tag_path(@conn, :show, t)) %></li>
          <% end %>
        <% end %>
      </ul>
    <% end %>
