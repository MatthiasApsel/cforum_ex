<% if current_user and (may?(RightsHelper::CREATE_TAGS) or current_user.admin?) %>
  <div class="cf-sidebar-box">
    <ul class="cf-sidebar">
      <li class="cf-sidebar-header"><h4><%= t('tags.tags') %></h4></li>

      <% if may?(RightsHelper::CREATE_TAGS) %>
        <li<% if action_name == 'new' or action_name == 'create' %> class="active"<% end %>><%= link_to t('tags.new_tag'), new_tag_path(current_forum.slug) %></li>
      <% end %>

      <% if may?(RightsHelper::CREATE_TAG_SYNONYM) and @tag %>
        <li<% if action_name == 'new_synonym' %> class="active"<% end %>><%= link_to t('tags.new_tag_synonym'), new_tag_synonym_path(current_forum.slug, @tag) %></li>
      <% end %>

      <% if current_user and current_user.admin and @tag %>
        <li<% if action_name == 'edit' or action_name == 'update' %> class="active"<% end %>><%= link_to t('tags.do_edit_tag'), edit_tag_path(current_forum.slug, @tag) %></li>
        <li><%= link_to t('tags.do_delete_tag'), tag_path(current_forum.slug, @tag), method: :delete, data: {confirm: t('global.are_you_sure')} %></li>
      <% end %>
    </ul>
  </div>
<% end %>
