<%
content_for :title, t('tags.edit_tag', name: @tag.tag_name)
content_for :h1, t('tags.edit_tag', name: @tag.tag_name)
%>

<%= form_for @tag, url: tag_path(current_forum.slug, @tag), html: {class: 'form-horizontal'} do |f| %>

<%= render 'form', f: f %>

<p class="form-actions">
  <%= f.submit t('global.save'), class: 'cf-primary-btn' %>
  <%= link_to t('global.cancel'), tags_path(current_forum.slug), class: 'cf-btn' %>
</p>

<% end %>
