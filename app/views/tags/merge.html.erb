<%
content_for :title, t('tags.new_tag')
content_for :h1, "<h1>".html_safe + t('tags.new_tag') + "</h1>".html_safe
%>

<h2><%= t('tags.new_tag') %></h2>

<%= form_for @tag, url: merge_tag_path(current_forum.slug, @tag), method: :post, html: {class: 'form-horizontal'} do |f| %>

  <select name="merge_tag">
    <% @tags.each do |tag| %>
      <option value="<%= tag.tag_id %>"><%= tag.tag_name %></option>
    <% end %>
  </select>

<p class="form-actions">
  <%= f.submit t('global.save'), class: 'cf-primary-btn' %>
  <%= link_to t('global.cancel'), tags_path(current_forum.slug), class: 'cf-btn' %>
</p>

<% end %>
