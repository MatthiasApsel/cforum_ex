<h1><%= t('views.forums') %></h1>

<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th><%= t('views.forum') %></th>
      <th><%= t('views.threads') %></th>
      <th><%= t('views.messages') %></th>
      <th><%= t('views.last_change') %></th>
    </tr>
  </thead>
  <tbody>
    <% @forums.each do |forum| %>
    <tr>
      <td><%= link_to forum.name, forum %></td>
      <td><%= @counts[forum.forum_id][:threads] %></td>
      <td><%= @counts[forum.forum_id][:messages] %></td>
      <td><%= @activities[forum.forum_id] ? l(@activities[forum.forum_id]) : '(nie)' %></td>
    </tr>
    <% end %>
  </tbody>
</table>
