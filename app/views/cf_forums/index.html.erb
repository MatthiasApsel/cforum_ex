<h1><%= t('views.forums') %></h1>

<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th><%= t('views.forum') %></th>
      <th><%= t('views.threads') %></th>
      <th><%= t('views.messages') %></th>
      <th><%= t('views.last_change') %></th>
    </tr>
  </thead>
  <tbody>
    <% @forums.each do |forum| %>
    <tr>
      <td><%= link_to forum.name, forum %></td>
      <td><%= @counts[forum.forum_id][:threads] %></td>
      <td><%= @counts[forum.forum_id][:messages] %></td>
      <td><%
        if @activities[forum.forum_id]
          msg = @activities[forum.forum_id] %>
          <%= l(msg.updated_at) %> von <%= msg.user_id ? link_to(msg.author, user_path(msg.owner)) : msg.author %>: <%= link_to msg.subject, cf_message_path(msg.thread, msg) %>
        <% else %>
          <em>(<%= t("views.never") %>)</em>
        <% end %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
