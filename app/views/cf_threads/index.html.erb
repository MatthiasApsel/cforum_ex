<%
content_for :title, t('threads.threadlist_title')
content_for :h1, current_forum.blank? ? t('threads.threadlist_all') : t('threads.threadlist', name: current_forum.name)
content_for :body_id, 'threads-index'
content_for :body_classes, 'threads forum-' + (current_forum.try(:slug) || 'all')
%>

<div class="root" data-js="threadlist">
  <% for thread in @threads %>
    <%= thread_html(thread) %>
  <% end %>
</div>

<% if uconf('page_messages') == 'yes' %>
  <%= render 'pages' %>
<% end %>

<img src="http://www.browser-statistik.de/browser.png?style=0" 
     width="1" height="1" style="border: 0px;" alt="">
