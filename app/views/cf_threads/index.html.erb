<%
render 'cf_messages/message_header'
render 'cf_threads/thread_tree'
%>

<% @threads.each do |thread| %>
<article class="thread threadlist">
  <%= message_header(thread, thread.message, true) %>

  <% unless thread.message.messages.blank? %>
  <%= message_tree(thread, thread.message.messages) %>
  <% end %>
</article>
<% end %>

<%= render 'pages' %>