<%
def message_tree(thread, messages, prev_deleted = false)
  html = "<ol>\n"
  messages.each do |message|
    classes = []
    classes << 'deleted' if message.deleted?
    classes << 'active' if @message and @message.message_id == message.message_id

    html << "<li"
    html << " class=\"" + classes.join(" ") + "\"" unless classes.blank?
    html << ">"
    html << message_header(thread, message, false, prev_deleted)
    html << message_tree(thread, message.messages, message.deleted?) unless message.messages.blank?
    html << "</li>"
  end

  html << "\n</ol>"

  html.html_safe
end
%>