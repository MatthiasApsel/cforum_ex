<fieldset class="tab-pane" id="notifications">
  <legend><%= t('views.notifications') %></legend>

  <div class="control-group">
    <label class="control-label"><%= t('views.notification_on_activity') %></label>
    <div class="controls">
      <label class="radio"><input type="radio" value="yes" name="settings[notify_on_activity]"<%= disabled %><% if @user.conf('notify_on_activity') == 'yes' %> checked="checked"<% end %>> <%= t("views.yeah") %></label>
      <label class="radio"><input type="radio" value="no" name="settings[notify_on_activity]"<%= disabled %><% if @user.conf('notify_on_activity') == 'no' or @user.conf('notify_on_activity').blank? %> checked="checked"<% end %>> <%= t("views.nope") %></label>
      <label class="radio"><input type="radio" value="email" name="settings[notify_on_activity]"<%= disabled %><% if @user.conf('notify_on_activity') == 'email' %> checked="checked"<% end %>> <%= t("views.via_email") %></label>
    </div>
  </div>

  <div class="control-group">
    <label class="control-label"><%= t('views.notification_on_answer') %></label>
    <div class="controls">
      <label class="radio"><input type="radio" value="yes" name="settings[notify_on_answer]"<%= disabled %><% if @user.conf('notify_on_answer') == 'yes' %> checked="checked"<% end %>> <%= t("views.yeah") %></label>
      <label class="radio"><input type="radio" value="no" name="settings[notify_on_answer]"<%= disabled %><% if @user.conf('notify_on_answer') == 'no' or @user.conf('notify_on_answer').blank? %> checked="checked"<% end %>> <%= t("views.nope") %></label>
      <label class="radio"><input type="radio" value="email" name="settings[notify_on_answer]"<%= disabled %><% if @user.conf('notify_on_answer') == 'email' %> checked="checked"<% end %>> <%= t("views.via_email") %></label>
    </div>
  </div>
</fieldset>
