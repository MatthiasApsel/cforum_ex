<h1><%= t("global.groups") %></h1>

<table class="table table-condensed table-striped table-hover table-striped">
  <thead>
    <tr>
      <th><%= t('global.group') %></th>
      <th><%= t('admin.groups.members') %></th>
      <th><%= t('activerecord.attributes.cf_group.created_at') %></th>
      <th><%= t('activerecord.attributes.cf_group.updated_at') %></th>
      <th> </th>
    </tr>
  </thead>

  <tbody>
    <% @groups.each do |g| %>
    <tr>
      <td><%= link_to g.name, edit_admin_group_path(g) %></td>
      <td><%= g.users.count %></td>
      <td><%= l(g.created_at) %></td>
      <td><%= l(g.updated_at) %></td>
      <td>
        <%= link_to '', admin_group_path(g), :method => :delete, data: {confirm: t('global.are_you_sure')}, class: 'icon icon-trash', title: t('admin.groups.delete_group') %>
        <%= link_to '', edit_admin_group_path(g), class: 'icon icon-edit', title: t('admin.groups.edit_group') %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
