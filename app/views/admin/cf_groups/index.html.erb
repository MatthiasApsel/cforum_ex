<%
content_for :title, t("global.groups")
%><h1><%= t("global.groups") %></h1>

<table class="cf-default-table">
  <thead>
    <tr>
      <th><%= t('global.group') %></th>
      <th><%= t('admin.groups.members') %></th>
      <th><%= CfGroup.human_attribute_name(:created_at) %></th>
      <th><%= CfGroup.human_attribute_name(:updated_at) %></th>
      <th> </th>
    </tr>
  </thead>

  <tbody>
    <% @groups.each do |g| %>
    <tr>
      <td><%= link_to g.name, edit_admin_group_path(g) %></td>
      <td><%= g.users.count %></td>
      <td><%= l(g.created_at, format: uconf('date_format_default')) %></td>
      <td><%= l(g.updated_at, format: uconf('date_format_default')) %></td>
      <td>
        <%= link_to '', admin_group_path(g), method: :delete, data: {confirm: t('global.are_you_sure')}, class: 'icon-delete-group', title: t('admin.groups.delete_group') %>
        <%= link_to '', edit_admin_group_path(g), class: 'icon-edit-group', title: t('admin.groups.edit_group') %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @groups %>
