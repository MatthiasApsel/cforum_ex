<%
content_for :title, t('admin.forums.edit', name: @cf_forum.name)
content_for :h1, "<h1>".html_safe + t('admin.forums.edit', name: @cf_forum.name) + "</h1>".html_safe
%>

<%= form_for @cf_forum, url: admin_forum_path(@cf_forum.forum_id), html: {class: 'form-horizontal'} do |f| %>

  <%= render 'form', f: f %>

  <p class="form-actions">
    <%= f.submit t('global.save'), class: 'cf-primary-btn' %>
    <%= link_to t('global.cancel'), admin_forums_path, class: 'cf-btn' %>
  </p>

<% end %>
