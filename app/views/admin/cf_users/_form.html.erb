  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><% t('admin.users.error_message', :errors_count => pluralize(@user.errors.count, t("global.error"), t('global.errors'))) %>:</h2>

      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

