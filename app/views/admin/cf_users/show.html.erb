<h1>Benutzer <%= @user.username %></h1>

<p>
  <%= t('views.email') %>: <%= @user.email %><br>
  <%= t('views.messages') %>: <%= @postings_count %><br>
  <%= t('views.active') %>: <%= @user.active ? t('views.yes') : t('views.no') %><br>
  <%= t('views.administrator') %>: <%= @user.admin ? t('views.yes') : t('views.no') %><br>
  <%= t('views.created') %>: <%= l(@user.created_at) %><br>
  <%= t('views.updated') %>: <%= l(@user.updated_at) %>
</p>

<p class="form-actions">
  <%= link_to t('views.edit'), edit_admin_user_path(@user), :class => 'btn' %>
  <%= link_to t('views.delete'), admin_user_path(@user), :method => :delete, data: {confirm: t('views.are_you_sure')}, :class => 'btn' %>
  <%= link_to t('views.back'), admin_users_path(@user), :class => 'btn' %>
</p>
