<%
content_for :title, t('mails.post_from', name: @mail.partner(current_user))
content_for :h1, t('mails.post_from', name: @mail.partner(current_user))
content_for(:body_id, "mail-show")
content_for(:body_classes, 'mail show recipient-' + user_to_class_name(@mail.recipient_name) + ' sender-' + user_to_class_name(@mail.sender_name))
%>

<article class="thread-message mail">
  <header class="message">
    <h2><%= @mail.subject %></h2>

    <details open>
      <summary><%= t('mails.post_from_to_from') %>
        <span class="author"><% if @mail.sender_id %><span class="registered-user original-poster"><%= link_to('<em>'.html_safe + t('global.user_profile') + '</em>'.html_safe, user_path(@mail.sender), class: 'icon-registered-user', title: t('messages.user_link', user: @mail.sender_name)) %></span><% end %> <%= @mail.sender_name %></span>
        <%= t('mails.post_from_to_to') %>
        <span class="recipient"><% if @mail.recipient_id %><span class="registered-user"><%= link_to('<em>'.html_safe + t('global.user_profile') + '</em>'.html_safe, user_path(@mail.recipient), class: 'icon-registered-user', title: t('messages.user_link', user: @mail.recipient_name)) %></span><% end %> <%= @mail.recipient_name %></span>
        <%= t('mails.at') %>
        <time datetime="<%= @mail.created_at.to_s %>"><%= l(@mail.created_at, format: date_format) %></time></summary>
    </details>
  </header>

  <div class="posting-content cf-box">
    <%= @mail.to_html(self) %>
  </div>
</article>

<div class="form-actions">
  <% unless @mail.partner_id(current_user).blank? %>
    <%= link_to t('mails.answer_mail'), new_mail_path(priv_message_id: @mail.priv_message_id, quote_old_message: 'yes'), class: 'cf-btn' %>
    <%= link_to t('mails.answer_mail_wo_quote'), new_mail_path('priv_message_id' => @mail.priv_message_id), class: 'cf-btn' %>
  <% end %>

  <%= link_to t('mails.delete'), mail_path(@mail.sender_name, @mail), method: :delete, data: {confirm: t('global.are_you_sure')}, class: 'cf-btn' %>
</div>
