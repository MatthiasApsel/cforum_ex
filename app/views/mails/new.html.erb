<%
content_for :title, t('mails.new_mail')
%><h1><%= t('mails.new_mail') %></h1>

<%= form_for @mail, url: mails_path, html: {:class => 'form-horizontal'} do |t| %>

<%= render 'form', t: t %>

<p class="form-actions">
  <%= t.submit t("mails.send"), :class => 'btn btn-primary' %>
  <%= link_to t("global.cancel"), mails_path, :class => 'btn' %>
</p>

<% end %>
