<%
disabled ||= false
users ||= []
id ||= name
single ||= false
desc ||= ""

%><div class="users-selector<% if single %> single<% end %>"><!-- "> -->
  <div class="control-group">
    <% if not desc.blank? %><label class="control-label"><%= desc %></label><% end %>

    <div class="controls" data-name="<%= name %>" data-id="<%= id %>"><!-- "> -->
      <div class="users">
      <% users.each do |u| %>
      <label class="checkbox">
        <input type="checkbox" checked="checked" value="<%= u.user_id %>" name="<%= name %>" id="<%= id %>_<%= u.user_id %>"<% if disabled %> disabled="disabled"<% end %>>
        <%= u.username %>
      </label>
      <% end %>
      </div>

      <% unless disabled %><i class="icon icon-plus add-user"> </i><% end %>
    </div>
  </div>

  <div class="modal fade users-modal">
    <div class="modal-header">
      <button class="close" data-dismiss="modal">Ã—</button>
      <h3>Benutzer suchen</h3>
    </div>
    <div class="modal-body">
      <p><input type="text" class="user_search"></p>

      <h4>Gefunden:</h4>

      <ul class="user-list">
      </ul>

      <h4>Auswahl:</h4>
      <ul class="found-user-list">
      </ul>

    </div>
    <div class="modal-footer">
      <a href="#" class="btn cancel">Abbrechen</a>
      <a href="#" class="btn btn-primary ok">Fertig</a>
    </div>
  </div>

</div>
