<article class="message">
  <%= message_header(@thread, @message, true) %>

  <div class="posting-content">
    <%= message_to_html(@message.content) %>
  </div>

  <p><%= link_to t(".new_message"), new_cf_message_path(@thread, @message) %></p>

  <article class="thread posting">
    <%= message_tree(@thread, @thread.message.messages) %>
  </article>
</article>