  <%= message_header(@thread, m, first: first) %>

  <div class="posting-content well">
    <%= message_to_html(m.content) %>
  </div>

  <p><%= link_to t("views.new_answer"), new_cf_message_path(@thread, m) %>
    <%= link_to '', vote_cf_message_path(@thread, m, type: 'up'), :method => :post, :class => 'icon icon-arrow-up vote vote-up' + ((@votes[m.message_id] and @votes[m.message_id].vtype == CfVote::UPVOTE) ? ' active' : '') %>
    <%= link_to '', vote_cf_message_path(@thread, m, type: 'down'), :method => :post, :class => 'icon icon-arrow-down vote vote-down' + ((@votes[m.message_id] && @votes[m.message_id].vtype == CfVote::DOWNVOTE) ? ' active' : '') %>
  </p>
