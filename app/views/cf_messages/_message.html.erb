<% do_parent ||= false %>
  <%= message_header(@thread, m, first: first, do_parent: do_parent) %>

  <div class="posting-content well">
    <%= m.to_html %>
  </div>

  <p>
    <%= link_to t("messages.new_answer"), new_cf_message_path(@thread, m, 'quote_old_message' => 'yes'), class: 'btn' %>
    <%= link_to t("messages.new_answer_wo_quote"), new_cf_message_path(@thread, m), class: 'btn' %>

    <%# if m.message_id != @thread.message.message_id and ((not current_user.blank? and @thread.message.user_id == current_user.user_id) or (not cookies[:cforum_user].blank? and @thread.message.uuid == cookies[:cforum_user])) %>
    <%= link_to m.accepted ? t('messages.unaccept_answer') : t('messages.accept_answer'), accept_cf_message_path(@thread, m), method: 'post', class: 'btn' %>
    <%# end %>

    <% if current_user %>
    <%= form_tag vote_cf_message_path(@thread, m), :method => :post do %>
    <button name="type" value="up"><i class="icon icon-arrow-up vote vote-up<% if @votes and @votes[m.message_id] and @votes[m.message_id].vtype == CfVote::UPVOTE %> active<% end %>"> </i></button>
    <button name="type" value="down"><i class="icon icon-arrow-down vote vote-up<% if @votes and @votes[m.message_id] and @votes[m.message_id].vtype == CfVote::DOWNVOTE %> active<% end %>"> </i></button>
    <% end
    end %>
  </p>
