<%
content_for(:title, t('devise.sign_in'))
content_for(:h1, t('devise.sign_in'))
%>

<%= form_for(resource, as: 'user', url: session_path(resource_name), html: {class: 'form-horizontal'}) do |f| %>
  <div class="cf-cgroup">
    <%= f.label :login %>
    <div class="cntrls">
      <%= f.text_field :login, placeholder: CfUser.human_attribute_name(:login), autofocus: true %>
    </div>
  </div>

  <div class="cf-cgroup">
    <%= f.label :password %>
    <div class="cntrls">
      <%= f.password_field :password, placeholder: CfUser.human_attribute_name(:password) %>
      <%= link_to t("devise.forgot_your_password"), new_password_path(resource_name), class: 'forgotten-password-link', tabindex: '-1' %>
    </div>
  </div>

<% if devise_mapping.rememberable? -%>
  <div class="cf-cgroup">
    <%= f.label :remember_me %>
    <div class="cntrls">
      <label class="checkbox"><%= f.check_box :remember_me %></label>
    </div>
  </div>
<% end -%>

  <p class="form-actions"><%= f.submit t('devise.sign_in'), class: 'cf-primary-btn' %></p>
<% end %>

<%# render "devise/shared/links" %>
