<%
content_for(:title, t('devise.sign_up'))
content_for(:h1, t('devise.sign_up'))
%>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: 'form-horizontal'}) do |f| %>
  <%= raw negative_captcha(@captcha) %>

  <% if resource.errors.any? %>
  <div class="alert alert-error">
    <h4><%= t("errors.messages.not_saved", count: resource.errors.count, resource: resource.class.model_name.human.downcase) %></h4>

    <ul>
      <% for message in resource.errors.full_messages %>
      <li><%= message %></li>
      <% end %>
    </ul>
  </div>
  <% end %>

  <div class="cf-cgroup">
    <%= negative_label_tag(@captcha, :username, CfUser.human_attribute_name(:username)) %>
    <div class="cntrls"><%= negative_text_field_tag(@captcha, :username, placeholder: t("layout.placeholders.username")) %></div>
  </div>

  <div class="cf-cgroup">
    <%= negative_label_tag(@captcha, :email, CfUser.human_attribute_name(:email)) %>
    <div class="cntrls"><%= negative_text_field_tag(@captcha, :email, placeholder: t("layout.placeholders.email"), type: 'email') %></div>
  </div>

  <div class="cf-cgroup">
    <%= negative_label_tag(@captcha, :password, CfUser.human_attribute_name(:password)) %>
    <div class="cntrls"><%= negative_text_field_tag(@captcha, :password, type: 'password') %></div>
  </div>

  <div class="cf-cgroup">
    <%= negative_label_tag(@captcha, :password_confirmation, CfUser.human_attribute_name(:password_confirmation)) %>
    <div class="cntrls"><%= negative_text_field_tag(@captcha, :password_confirmation, type: 'password') %></div>
  </div>

  <p class="form-actions">
    <%= f.submit t('devise.sign_up'), class: 'cf-primary-btn' %>
  </p>
<% end %>
